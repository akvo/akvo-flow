  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.showDeprecation>false</maven.compiler.showDeprecation>
    <archiveClasses>true</archiveClasses>
    <appId>akvoflowsandbox</appId> <!-- default setting for appId -->
    <project.configFilesDir>${project.basedir}/../../akvo-flow-server-config</project.configFilesDir>
  </properties>

