<div class="geoshapeMapContainer" style="width:99%; float: left"></div>
{{#if view.isPolygon}}
    <div style="float: left; width: 100%">
        <div style="float: left; width: 100%">{{t _points}}: {{view.pointCount}}</div>
        <div style="float: left; width: 100%">{{t _length}}: {{view.length}}m</div>
        <div style="float: left; width: 100%">{{t _area}}: {{view.area}}m&sup2;</div>
    </div>
{{else}} {{#if view.isLineString}}
    <div style="float: left; width: 100%">
        <div style="float: left; width: 100%">{{t _points}}: {{view.pointCount}}</div>
        <div style="float: left; width: 100%">{{t _length}}: {{view.length}}m</div>
    </div>
{{else}} {{#if view.isMultiPoint}}
        <div style="float: left; width: 100%">
            <div style="float: left; width: 100%">{{t _points}}: {{view.pointCount}}</div>
        </div>
    {{else}}
        <div> {{view.geoshapeString}} </div>
    {{/if}}{{/if}}{{/if}}
