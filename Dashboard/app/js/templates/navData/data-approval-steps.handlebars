<ul id="approvalSteps">
    {{#each step in controller}}
        <div class="eachStep">
            <li><h4>{{view Ember.TextField valueBinding="step.title" size=80}}</h4></li>
            <a {{action deleteApprovalStep step target="controller"}}>{{t _delete}}</a>
        </div>
    {{/each}}
    <a {{action addApprovalStep target="controller"}} class="addFolder addStep">{{t _add_step}}</a>
</ul>
