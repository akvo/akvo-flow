{{#with FLOW.selectedControl.selectedSurvey as form}}
<div id="form01" class="aformContainer">
	<nav class="newSurveyNav">
		<ul>
			<li><a class="previewNewSurvey" {{action "showPreview" target="FLOW.surveyControl"}}>Preview</a></li>
			<li><a class="deleteSurvey" {{action confirm FLOW.dialogControl.delForm target="FLOW.dialogControl"}}>Delete</a></li>
		</ul>
	</nav>
	<ul class="formSummary">
		<li>{{t _version}}<span class="formVersion">{{form.version}}</span></li>
		<li>{{t _id}}<span class="formID">{{form.keyId}}</span></li>
		<li>{{t _questions}}<span class="formQuestionCount">{{FLOW.projectControl.questionCount}}</span></li>
	</ul>
	<section class="formDetails">
		<h3>{{t _form_basics}}</h3>
		{{#if view.visibleFormBasics}}
			{{#unless view.isNewForm}}
				<a {{action "toggleShowFormBasics" target="this"}} class="showCollapse">{{t _collapse}}</a>
			{{/unless}}
			<form class="surveyDetailForm">
				<label>{{t _form_title}}</label>
				{{view Ember.TextField valueBinding="form.name"}}
				<label>{{t _form_description}}</label>
				{{view Ember.TextField valueBinding="form.description"}}
				<label>{{t _manage}}</label>
				<nav class="newSurveyNav">
					<ul class="manageStuff">
						<li><a class="manageTranslations" {{action "doManageTranslations" target="this"}}>{{t _manage_translations}}</a></li>
						<li><a class="manageNotifications" {{action "doManageNotifications" target="this"}}>{{t _manage_notifications}}</a></li>
					</ul>
				</nav>
			</form>
		{{else}}
			<a {{action "toggleShowFormBasics" target="this"}} class="showCollapse">{{t _show}}</a>
		{{/if}}
	</section>
	<section class="surveyForm">
		{{#if view.manageTranslations}}
			{{view FLOW.TranslationsView}}
		{{else}}
			{{#if view.manageNotifications}}
				{{view FLOW.NotificationsView}}
			{{else}}
				{{view FLOW.EditQuestionsView}}
			{{/if}}
		{{/if}}
	</section>
</div>
{{/with}}
