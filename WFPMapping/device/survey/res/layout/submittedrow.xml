<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:textSize="30dip">
	<ImageView android:id="@+id/xmitstsicon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_marginLeft="5dp"
		android:src="@drawable/info"
		/>
	<TextView android:id="@+id/text1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/xmitstsicon"
		/>
	<TextView android:id="@+id/text2" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_toRightOf="@id/xmitstsicon" android:layout_below="@id/text1"
		/>
</RelativeLayout>